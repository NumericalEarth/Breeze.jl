# EditorConfig: https://editorconfig.org

# top-most EditorConfig file
root = true

# * Unix-style newlines,
# * final newline ending every file,
# * trim extra whitespace at end of lines or file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 4-space indentation
[*.{jl,md,sh}]
indent_style = space
indent_size = 4
